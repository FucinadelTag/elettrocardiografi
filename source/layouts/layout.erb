<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Da inserire" %></title>

    <meta name="description" content="<%= current_page.data.description || "Da inserire" %>" />

    <%= stylesheet_link_tag :site %>

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

    <link rel="apple-touch-icon" href="https://www.philips.it/b-etc/philips/clientlibs/foundation-base/clientlibs-css/img/favicon/favicon-hd.png">
    <link rel="icon" href="https://www.philips.it/b-etc/philips/clientlibs/foundation-base/clientlibs-css/img/favicon/favicon-s.png">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/2.1.0/js.cookie.min.js"></script>

    <% if current_page.data.headCode  %>
        <%= current_page.data.headCode %>
    <% end %>

    <script>
        //SETTO LE DIMENSIONI DELLO SCHERMO NEL FORM
        $(window).resize(function() {
            $.setDeviceInForm ('#deviceForm');
        })

        $( document ).ready(function() {
            $.setDeviceInForm ('#deviceForm');
        });
        //SETTO LA CAMPAGNA
        $( document ).ready(function() {
            $.setCampaingInForm ('#campagnaForm');
        });
        //SETTO IL TEST ID
        $( document ).ready(function() {
            $.setOptimizelyVariationInForm ('#optimizelyVariationForm', '5099231147');
        });

    </script>

  </head>

    <body class="<%= page_classes %>">

        <div class="row">
            <div class="top-bar">
                <div class="top-bar-left">
                    <ul class="menu">
                        <li class="menu-text"><a href="/"><img src="https://prismic-io.s3.amazonaws.com/elettrocardiografi/260bd32d98558be21b5c3dad90103f23190b18a1_logo_meditron.png"></a></li>
                    </ul>
                </div>
            </div>
        </div>

        <section class="title-container show-for-medium" style="background: url(<%= current_page.data.immagineTestata %>) center no-repeat; background-size: cover;">
            <div class="row clearfix">
                <div class="title float-center">
                    <h1 class="big">
                        <% if current_page.data.testata.prima_riga != ''  %>
                            <%= current_page.data.testata.prima_riga %>
                        <% end %>
                    </h1>
                    <span class="medium">
                        <% if current_page.data.testata.seconda_riga != ''  %>
                            <%= current_page.data.testata.seconda_riga %><br />
                        <% end %>
                    </span>

                    <% if current_page.data.testata.hasButton != 0  %>
                        <span>
                            <%= partial "partials/callToAction" %>
                        </span>
                    <% end %>
                </div>
            </div>
        </section>

        <section class="title-container show-for-small-only">
            <div class="row clearfix">
                <div class="title float-center">
                    <h1 class="title-mobile">
                        <% if current_page.data.testata.prima_riga != ''  %>
                            <%= current_page.data.testata.prima_riga %>
                        <% end %>
                    </h1>
                    <br>
                    <h2 class="medium">
                        <% if current_page.data.testata.seconda_riga != ''  %>
                            <%= current_page.data.testata.seconda_riga %><br />
                        <% end %>
                    </h2>
                    <img src="<%= current_page.data.immagineTestata %>">
                    <br><br>
                    <% if current_page.data.testata.hasButton != 0  %>
                        <h3 class="show-for-medium">
                            <%= partial "partials/callToAction" %>
                        </h3>
                    <% end %>
                </div>
            </div>
        </section>


        <%= yield %>

        <%= partial "partials/footer" %>


        <%= javascript_include_tag  "all" %>

        <% if current_page.data.conversionCode  %>
            <%= current_page.data.conversionCode %>
        <% end %>

    </body>
</html>
